<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#000" />
            <size
                android:width="15dp"
                android:height="2dp" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item>
                    <color android:color="#707507" />
                </item>
                <item
                    android:left="2dp"
                    android:top="2dp"
                    android:right="2dp"
                    android:bottom="2dp">
                    <shape>
                        <gradient
                            android:startColor="#367226"
                            android:centerColor="#79901c"
                            android:endColor="#f7ff10" />
                        <size
                            android:width="15dp"
                            android:height="15dp" />

                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>