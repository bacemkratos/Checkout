<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/container_back"
    android:orientation="vertical"
    android:paddingBottom="35dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="27dp">

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/decorativeback"
        android:fontFamily="@font/annie_use_your_telescope"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Do you realy want to exit ?"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/semsester_setails_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/news_back_normal"
        android:fontFamily="@font/architects_daughter"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:text="fdsf"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/type_detail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/back1"
        android:fontFamily="@font/architects_daughter"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:text="fdsf"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mark_detail_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:fontFamily="@font/architects_daughter"
            android:text="fdsf"
            android:textAlignment="viewStart"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/mark_emoji_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            app:srcCompat="@drawable/happy" />
    </LinearLayout>

    <TextView
        android:id="@+id/note_id_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/news_back_warning"
        android:fontFamily="@font/alike"
        android:maxLines="8"
        android:paddingBottom="8sp"
        android:paddingTop="8sp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp" />

    <Button
        android:id="@+id/quit_dialog_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:text="Return"
        android:textColor="@color/cardview_light_background" />


</LinearLayout>